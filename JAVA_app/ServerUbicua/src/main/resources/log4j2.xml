<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <!-- LOG GENERAL -->
        <RollingFile name="LogFile"
                     fileName="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/log.log"
                     filePattern="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/Ubicomp-%d{yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- LOG MQTT -->
        <RollingFile name="LogFileMQTT"
                     fileName="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/logmqtt.log"
                     filePattern="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/Ubicompmqtt-%d{yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE MQTT LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- LOG BASE DE DATOS -->
        <RollingFile name="LogFileDB"
                     fileName="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/logdb.log"
                     filePattern="/usr/local/tomcat/webapps/ServerExampleUbicomp-1.0-SNAPSHOT/logs/Ubicompdb-%d{yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE DATABASE LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="log" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFile" level="DEBUG" />
        </Logger>

        <Logger name="logmqtt" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFileMQTT" level="DEBUG" />
        </Logger>

        <Logger name="logdb" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFileDB" level="DEBUG" />
        </Logger>
    </Loggers>
</Configuration>