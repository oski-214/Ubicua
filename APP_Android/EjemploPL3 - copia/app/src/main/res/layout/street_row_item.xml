<?xml version="1.0" encoding="utf-8"?>
<!-- Cambiamos a un CardView para un mejor diseño visual por cada item -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!-- Usamos un LinearLayout vertical para organizar todos los campos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila para ID y Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_street_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Calle del Sol" />

            <TextView
                android:id="@+id/text_street_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="?android:textColorSecondary"
                tools:text="ST_1678" />
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="?android:attr/listDivider" />

        <!-- Campos adicionales organizados en pares -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Columna Izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitud:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_street_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="63.21 m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Latitud:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="40.4256" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Distrito:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Salamanca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tipo de Superficie:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_surface_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="asphalt" />
            </LinearLayout>

            <!-- Columna Derecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Límite Velocidad:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_speed_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="30 km/h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Longitud:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="-3.6619" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Barrio:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_neighborhood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Parque de las Avenidas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Código Postal:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_postal_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28009" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
